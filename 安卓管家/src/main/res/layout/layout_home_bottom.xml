<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#666" />
    <!-- 第一排 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_home_item_rocket"
            style="@style/style_home_bottom_item"
            android:drawableTop="@mipmap/icon_rocket"
            android:text="手机加速" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#666" />

        <TextView
            android:id="@+id/tv_home_item_softmgr"
            style="@style/style_home_bottom_item"
            android:drawableTop="@mipmap/icon_softmgr"
            android:text="软件管理" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#666" />

        <TextView
            android:id="@+id/tv_home_item_phonemgr"
            style="@style/style_home_bottom_item"
            android:drawableTop="@mipmap/icon_phonemgr"
            android:text="手机检测" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#666" />

    <!-- 第二排 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_home_item_telmgr"
            style="@style/style_home_bottom_item"
            android:drawableTop="@mipmap/icon_telmgr"
            android:text="通讯大全" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#666" />

        <TextView
            android:id="@+id/tv_home_item_filemgr"
            style="@style/style_home_bottom_item"
            android:drawableTop="@mipmap/icon_filemgr"
            android:text="文件管理" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#666" />

        <TextView
            android:id="@+id/tv_home_item_sdclean"
            style="@style/style_home_bottom_item"
            android:drawableTop="@mipmap/icon_sdclean"
            android:text="垃圾清理" />

    </LinearLayout>

</LinearLayout>