<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gfd.phone.activity.PhonemgrActivity">

    <RelativeLayout
        android:id="@+id/rela_phone"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:clickable="true">

        <ProgressBar
            android:id="@+id/pb_phonemgr_elsctricity"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="250dp"
            android:layout_height="90dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:progressDrawable="@drawable/progress_elec" />

        <View
            android:id="@+id/view_phone"
            android:layout_width="15dp"
            android:layout_height="40dp"
            android:layout_marginTop="55dp"
            android:layout_toRightOf="@+id/pb_phonemgr_elsctricity"
            android:background="#c66c27" />

        <TextView
            android:id="@+id/tv_phone_dinachi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="55dp"
            android:text="50%"
            android:textColor="#82ef5a"
            android:textSize="30dp"
            />
    </RelativeLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/phone_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@mipmap/green"
                android:src="@mipmap/phone_one" />

            <TextView
                android:id="@+id/tv_phone_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/phone_one"
                android:text="设备名称："
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_phone_banben"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_phone_name"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/phone_one"
                android:text="系统版本："
                android:textSize="20dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/phone_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@mipmap/red"
                android:src="@mipmap/setting_info_icon_space" />

            <TextView
                android:id="@+id/tv_phone_totalmemory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/phone_two"
                android:text="设备名称："
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_phone_availableMemory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_phone_totalmemory"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/phone_two"
                android:text="系统版本："
                android:textSize="20dp" />
        </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/phone_there"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/yellow"
                    android:src="@mipmap/setting_info_icon_cpu" />

                <TextView
                    android:id="@+id/tv_phone_totalcpu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@+id/phone_there"
                    android:text="设备名称："
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_phone_availableCPU"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_phone_totalcpu"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/phone_there"
                    android:text="系统版本："
                    android:textSize="20dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/phone_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/green"
                    android:src="@mipmap/setting_info_icon_camera" />

                <TextView
                    android:id="@+id/tv_phone_rootFBL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@+id/phone_four"
                    android:text="设备名称："
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_phone_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_phone_rootFBL"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/phone_four"
                    android:text="系统版本："
                    android:textSize="20dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/phone_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/red"
                    android:src="@mipmap/setting_info_icon_root" />

                <TextView
                    android:id="@+id/tv_phone_parentroot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@+id/phone_five"
                    android:text="设备名称："
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_phone_isroot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_phone_parentroot"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/phone_five"
                    android:text="系统版本："
                    android:textSize="20dp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
