<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gfd.phone.activity.ClearActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#69f759">
        <TextView
            android:id="@+id/tv_cl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已发现"
            android:textSize="20dp"
            android:textColor="#fff"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="50dp"
            />
        <TextView
            android:id="@+id/tv_clean"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="00.00"
            android:textSize="50dp"
            android:layout_toRightOf="@+id/tv_cl"
            android:layout_alignBaseline="@id/tv_cl"
            android:textStyle="italic|bold"
            android:textColor="#fff"
            />
    </RelativeLayout>
   <ListView
       android:id="@+id/list_clean"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1"></ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/cb_clean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/bt_clean"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bt_rocket_bg"
            android:text="一键清理"
            android:textColor="#fff"
            android:layout_margin="5dp"
            android:onClick="bt_clean"/>

    </LinearLayout>

</LinearLayout>
