<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ef8904"
    tools:context="com.gfd.phone.activity.SplashActivity">

    <TextView
        android:id="@+id/tv_splash_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/splash_tv_timer"
        android:textColor="@color/splash_tv_itmer"
        android:textSize="20sp"
        android:layout_alignParentRight="true"
        android:background="#6666"
        android:padding="6dp"
        android:layout_margin="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="安卓管家"
        android:textSize="40sp"
        android:textColor="@color/splash_tv_logon"
        android:layout_centerInParent="true"/>


</RelativeLayout>
